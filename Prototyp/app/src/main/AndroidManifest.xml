<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.prototyp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/rest"
        android:label="VotingApp"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".HomeScreen"
            android:label="@string/title_activity_home_screen"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SingIn"
            android:label="@string/title_activity_sing_in"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Freund"
            android:label="@string/title_activity_freund"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Restaurantes"
            android:label="@string/title_activity_restaurantes"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".BewertungsAction"
            android:label="@string/title_activity_bewertungs_action"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AddRestaurantActivity"
            android:label="@string/title_activity_add_restaurant"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Voting"
            android:label="@string/title_activity_voting"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
